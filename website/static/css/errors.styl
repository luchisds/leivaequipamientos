body
  font-family 'Maven Pro', 'Arial'
  text-align center

i
  color #60C59C

li
  display inline-block
  list-style none

nav
  margin-top 1.5em
  ul
    li
      a
        color #444
        font-size 1em
        padding 1.5em 1.4em
        text-decoration none

ul
  margin 0
  padding 0

#logo
  a
    color #444
    font-size 2em
    text-decoration none
  span
    color #60C59C
    font-weight bold

#slogan
  font-size .9em

#logo, #slogan
  color #444
  font-family 'Arial','Arimo','sans-serif'
  font-weight normal
  margin 0

.deco
  margin-top 3em
  & + p
    font-size 2.2em
    font-weight bold

